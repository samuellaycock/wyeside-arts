{% extends "backend/_layouts/system.twig" %}

{% block head %}

{% endblock %}

{% block title %}Users{% endblock %}

{% block content %}
    <div class="block-dark">
        <h1>Edit User</h1>
    </div>

    <div class="block-light">
        <form method="post">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" value="{{ user.getUsername() }}">
            <br>

            <label for="email">Email</label>
            <input type="text" id="email" name="email" value="{{ user.getEmail() }}">
            <br>

            <hr>
            <input type="submit" value="Save">
            <input type="button" value="Cancel" onclick="window.location.href='/system/users'">
        </form>
    </div>
{% endblock %}