{% if imageReload %}
    <script type="text/javascript">
        parent.document.getElementById('banner-image').setAttribute("src", "{{ event.getMainImageUrl() }}");
        parent.resetSpinner('banner-upload-form');
    </script>
{% else %}
    <img style="position:absolute;left:0;top:0;right:0;width:100%;z-index:-1;" src="{{ event.getMainImageUrl() }}" id="banner-image" >
{% endif %}