{% extends "backend/_layouts/system.twig" %}

{% block head %}
    <link href="/css/backend/events/create.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block title %}Events{% endblock %}

{% block content %}
    <div class="block-dark">
        <h1 style="background-color: #333;">Import Events From TicketSolve</h1>
    </div>

    <div class="block-light">
        <table class="system-table table-striped">
            <tr>
                <th style="width:140px;">Ticketsolve ID</th>
                <th>Title</th>
                <th>Action</th>
            </tr>
            {% for eventModel in unSyncedEvents %}
                <tr>
                    <td>{{ eventModel.getTicketsolveId() }}</td>
                    <td>{{ eventModel.getTitle() }}</td>
                    <td>
                        <select>
                            <option>Do Nothing</option>
                            <option>Create New Event</option>
                            <option>Link to Existing Event</option>
                        </select>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <h2>Already Synced:</h2>
        <ul>
            {% for eventModel in syncedEvents %}
                <li>{{ eventModel.getTitle() }}</li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}