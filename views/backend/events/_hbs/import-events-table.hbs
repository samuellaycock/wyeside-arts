<div class="block-light">
    <h2>Not Synced</h2>
    <br>
    <table class="system-table table-striped">
        <tr>
            <th style="width:140px;">Ticketsolve ID</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
        {{#each pending}}
            <tr id="row_{{ this.ticketsolve }}">
                <td>{{ this.ticketsolve }}</td>
                <td>{{ this.title }}</td>
                <td>
                    <select id="action_{{ this.ticketsolve }}" onchange="importManager.createEvent('{{ this.ticketsolve }}');">
                        <option value="0">Do Nothing</option>
                        <option value="createNew">Create New Event</option>
                        <option value="link">Link to Existing Event</option>
                        <option value="link3D">Link to Existing Event (3D)</option>
                    </select>
                </td>
            </tr>
        {{/each}}
    </table>
</div>

<div class="block-dark">
    <br>
    <h2>Already Synced</h2>
    <br>

    <table class="system-table table-striped">
        <tr>
            <th style="width:140px;">Ticketsolve ID</th>
            <th>Title</th>
        </tr>
        {{#each synced}}
            <tr>
                <td>{{ this.ticketsolve }}</td>
                <td>{{ this.title }}</td>
            </tr>
        {{/each}}
    </table>
</div>