<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/backend/_layouts/system.css">
    <link rel="stylesheet" type="text/css" href="/css/backend/login/index.css">
    <link rel="stylesheet" type="text/css" href="/css/backend/text.css">
    <link rel="stylesheet" type="text/css" href="/css/backend/form.css">
    <link rel="stylesheet" type="text/css" href="/css/backend/spinner.css">

    <script src="/plugin/jquery/jquery.min.js" type="text/javascript"></script>
    <title>System Login | Wyeside Arts</title>
</head>
<body>
<div id="wrapper">
    <div id="heading">
        <form id="loginForm" method="post">
            <img src="/img/wyeside-logo.png">
            <h1>Wyeside Arts Admin System</h1><p>Please login to continue.</h1>
                <br><br><br>
            {% if error %}
                <p class="error">{{ error }}</p>
            {% endif %}
            <input type="text" name="username" placeholder="Username" id="username">
            <br>
            <input type="password" name="password" placeholder="Password">
            <br><br>
            <button type="submit">Login</button>
        </form>
    </div>
    <img id="banner" src="{{ event.getBannerImageUrl }}" style="border-color: {{ event.getTypePrimaryColor() }};">
</div>
<script type="text/javascript">
    $("#username").focus();
</script>
</body>
</html>